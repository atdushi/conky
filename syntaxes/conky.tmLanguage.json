{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Conky",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"begin": "#",
				"beginCaptures": {
					"0":{
						"name": "punctuation.definition.comment.conky"
					}
				},
				"end": "\\n",
				"name": "comment.line.number-sign.conky"				
			},
			{
				"begin": "--",
				"beginCaptures": {
					"0":{
						"name": "punctuation.definition.comment2.conky"
					}
				},
				"end": "\\n",
				"name": "comment.line.number-sign2.conky"				
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.conky",
				"match": "\\b(exec|execi)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.conky",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.conky",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.conkyrc"
}